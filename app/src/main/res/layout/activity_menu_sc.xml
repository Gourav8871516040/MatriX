<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".MenuSc">

    <View
        android:id="@+id/divider5"
        android:layout_width="1dp"
        android:layout_height="638dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="1dp"

        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="200dp"
        android:layout_height="600dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divider5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/apseries"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/apseries2" />


            <ImageView
                android:id="@+id/surfacearea"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/surfcarea" />

            <ImageView
                android:id="@+id/findvolume"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/findvol" />


            <ImageView
                android:id="@+id/calci"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/calculator" />

            <ImageView
                android:id="@+id/matoprtn"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/matoprtn" />


        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="595dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/scrollView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/findarea"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/findarea" />

            <ImageView
                android:id="@+id/findperimeter"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/findperimtr" />

            <ImageView
                android:id="@+id/checknumb"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/checknum" />

            <ImageView
                android:id="@+id/numtab"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/numtab" />

            <ImageView
                android:id="@+id/numsys"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/numsys2" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>