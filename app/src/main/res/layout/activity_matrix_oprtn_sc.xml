<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MatrixOprtnSc">


    <ScrollView
        android:layout_width="310dp"
        android:layout_height="540dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/summat"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/ripple"
                android:drawableLeft="@drawable/matsymbl"
                android:drawableRight="@drawable/matsymbl"
                android:text="Sum of Matrix"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.278" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />


            <Button
                android:id="@+id/submat"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/ripple"
                android:drawableLeft="@drawable/matsymbl"
                android:drawableRight="@drawable/matsymbl"
                android:text="Subtraction of Matrix"
                android:textAllCaps="false"
                android:textColor="#000000"

                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.278" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/prodmat"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/ripple"
                android:drawableLeft="@drawable/matsymbl"
                android:drawableRight="@drawable/matsymbl"
                android:text="Product of Matrix"
                android:textAllCaps="false"
                android:textColor="#000000"

                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.278" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/sumdiag"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/ripple"
                android:drawableLeft="@drawable/matsymbl"
                android:drawableRight="@drawable/matsymbl"
                android:text="Sum of Mat. Diagonal"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.278" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/prodiag"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/ripple"
                android:drawableLeft="@drawable/matsymbl"
                android:drawableRight="@drawable/matsymbl"
                android:text="Product of Mat. Diagonal"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.278" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/sumrowcol"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/ripple"
                android:drawableLeft="@drawable/matsymbl"
                android:drawableRight="@drawable/matsymbl"
                android:text="Sum of Rows / Column"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.278" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/prorowcol"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/ripple"
                android:drawableLeft="@drawable/matsymbl"
                android:drawableRight="@drawable/matsymbl"
                android:text="Product of Rows / Column"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.278" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>